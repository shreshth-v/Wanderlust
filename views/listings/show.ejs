<% layout("/layouts/boilerplate") -%>
<body>
    
    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <h3><%= listing.title %></h3>
        </div>
    </div>

    <div class="row">
        <div class="card listing-card col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
            <div class="card-body">
                <p class="card-text">
                    <strong>Owner: <i><%= listing.owner.username %></i></strong> <br>
                    <%= listing.description %> <br>
                    &#x20B9; <%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>

                </p>
            </div>
        </div>
    </div>

    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="mb-3 row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 btns">
            <form action="/listings/<%= listing._id %>/edit" method="GET">
                <button class="btn btn-dark edit-btn offset-1">Edit</button>
            </form>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark offset-1">Delete</button>
            </form>
        </div>
    </div>
    <% } %>

    <% if (currUser) { %>
    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <h3>Add Review</h3>
        </div>
    </div>

    <div class="row">
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 needs-validation">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating:</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Commmet:</label>
                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>  
                <div class="invalid-feedback">
                    Please give feedback.
                </div>
            </div>
            <button class="btn btn-dark mb-3">Add</button>
        </form>
    </div>
    <% } %>

    <% if(listing.reviews.length) {%>
    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <h3>All Reviews</h3>
        </div>
    </div>
    <% } %>

    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-5 mb-3 mx-2">
                        <div class="card-body p-1">
                            <p class="card-title">@<%= review.author.username %></p>
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                            <% if (currUser && currUser._id.equals(review.author._id)) { %>
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-2">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>   
        </div> 
    </div>

    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mb-4">
            <div>Where youâ€™ll be</div>
            <div id="map" class="map" 
            data-lat="<%= listing.geometry.coordinates[1] %>" 
            data-lng="<%= listing.geometry.coordinates[0] %>"></div>
        </div>
    </div>
</body>

<script src="/js/map.js"></script>